{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Oklus",
  "version": "0.1.0",
  "identifier": "com.capos.oklus",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "security": { "csp": null, "capabilities": ["app", "default"] },
    "windows": [
      {
        "label": "main",
        "title": "Oklus",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "fs": { "requireLiteralLeadingDot": false },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/RicardoCR98/oklus/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNCREFGQjkwREUwMUJEMjMKUldRanZRSGVrUHZhTzV1SEx4dGR3ZE45Q1hkT2lBZnJncDE3UndPQUd1OVRIYm8xTmlaUjZBc3MK"
    }
  }
}
